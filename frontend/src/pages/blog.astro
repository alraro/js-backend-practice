---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = Object.values(import.meta.glob('./posts/*.md', {eager: true}));
console.log(allPosts);
const pageTitle = "Blog Page";
---

<BaseLayout pageTitle={pageTitle}>
    <h2>Bienvenido al blog!</h2>
    <p>Aquí puedes encontrar varios artículos y publicaciones sobre diferentes temas.</p>
    <p>¡Siéntete libre de explorar las publicaciones y dejar tus comentarios!</p>
    <ul>
        {allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
    </ul>
</BaseLayout>
